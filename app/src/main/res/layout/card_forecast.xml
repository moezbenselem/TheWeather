<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_weather"
    android:visibility="gone"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#DDD"
    android:alpha="0.7"
    card_view:cardCornerRadius="12dp"
    android:animateLayoutChanges="true"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:padding="16dp">


        <TextView
            android:id="@+id/item_city"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:textSize="24sp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"

            android:id="@+id/btState"


            android:clickable="false"
            android:layout_toEndOf="@+id/item_city" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_city"
            android:fontFamily="sans-serif-thin"
            android:padding="5dp"
            android:gravity="center"

            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/item_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_date"
            android:fontFamily="sans-serif-thin"
            android:padding="5dp"
            android:gravity="center"

            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:layout_below="@id/item_general"
            android:padding="5dp"

            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/item_temp"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-thin"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_desc"
            android:padding="5dp"

            android:gravity="center"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/item_wind"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_temp"
            android:padding="5dp"

            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>